<!DOCTYPE html>
<html>
<head>
  <title>Project-Monitor | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<%= render 'shared/navbar' %>
<% unless notice.blank? %>
      <div class="alert alert-info alert-dismissable alert-fixed">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
    <% end %>
    <% unless alert.blank? %>
      <div class="alert alert-danger alert-dismissable alert-fixed">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
    <% end %>
    <% if current_page?(root_path) || current_page?(projects_path) %>
    <div class="homePageImg">
      <div class="container">
        <%= yield %>
      </div>

    </div>
    <% else %>
      <div class="container">
        <%= yield %>
      </div>
    <% end %>

 <footer class="footer navbar-brand">
      <div class="container">
        <p class="text-center footerCss">Distracting Dreams <sup><%= Time.now.strftime "%Y" %></sup></p>
      </div>
    </footer>
</body>

</html>